<% if current_owner.restaurants.empty? %>
    <p>No restaurants to show</p>
<% else %>
    <% current_owner.restaurants.each do |x| %>
        <p>Name: <%= x.name %></p>
        <p>Description: <%= x.description %></p>
        <p>Address: <%= x.address %></p>
        <p>phone: <%= x.phone %></p>
        </br>
    <% end %>
<% end %>
